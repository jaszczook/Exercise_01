<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kuba.exercise_01">

    <uses-permission android:name="com.example.kuba_permissions.ADD_ITEM" />

    <permission-group
        android:name="com.example.kuba_permissions"
        android:label="Kuba's permissions group" />
    <permission
        android:name="com.example.kuba_permissions.ADD_ITEM"
        android:permissionGroup="com.examples.kuba_permissions"
        android:label="Add item permission" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ItemListActivity">
            <intent-filter>
                <action android:name="com.hmkcode.android.another.app.ANOTHER_ACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".EditItemActivity">
            <intent-filter>
                <action android:name="com.hmkcode.android.another.app.AND_ANOTHER_ACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".AddItemActivity" />
        <activity android:name=".OptionsActivity"></activity>
        <provider
            android:authorities="com.example.kuba.exercise_01.ItemProvider"
            android:name=".ItemProvider">
        </provider>
    </application>

</manifest>